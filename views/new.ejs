<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Add Task · StudyTrack</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet"/>

  <style>
    body {
      font-family: "Inter", system-ui, sans-serif;
    }

    .navbar {
      background: linear-gradient(135deg, #4f46e5, #6366f1);
    }

    .form-card {
      border-radius: 18px;
    }

    .form-control,
    .form-select {
      border-radius: 12px;
      padding: 10px 14px;
    }

    .form-control:focus,
    .form-select:focus {
      box-shadow: 0 0 0 0.2rem rgba(99,102,241,0.25);
      border-color: #6366f1;
    }

    .save-btn {
      border-radius: 999px;
      font-weight: 600;
    }
  </style>
</head>

<body class="bg-light d-flex flex-column min-vh-100">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/tasks">StudyTrack</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/tasks">All Tasks</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/tasks/new">Add Task</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container py-5 flex-grow-1">

    <div class="row justify-content-center">
      <div class="col-lg-7 col-md-9">

        <h3 class="fw-semibold text-center mb-4">➕ Add New Task</h3>

        <div class="card form-card shadow-sm border-0">
          <div class="card-body p-4">

            <form action="/tasks" method="post" class="needs-validation" novalidate>

              <!-- Title -->
              <div class="mb-3">
                <label class="form-label fw-semibold">Task Title</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="e.g. Complete DBMS assignment"
                  name="title"
                  required>
                <div class="invalid-feedback">Please enter task title.</div>
              </div>

              <!-- Subject -->
              <div class="mb-3">
                <label class="form-label fw-semibold">Subject</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="e.g. DBMS / Java / Web Dev"
                  name="subject"
                  required>
                <div class="invalid-feedback">Please enter subject.</div>
              </div>

              <!-- Description -->
              <div class="mb-3">
                <label class="form-label fw-semibold">Description</label>
                <textarea
                  class="form-control"
                  rows="3"
                  placeholder="Brief task description"
                  name="description"
                  required></textarea>
                <div class="invalid-feedback">Please provide description.</div>
              </div>

              <!-- Due Date -->
              <div class="mb-3">
                <label class="form-label fw-semibold">Due Date</label>
                <input type="date" class="form-control" name="dueDate">
              </div>

              <!-- Priority -->
              <div class="mb-3">
                <label class="form-label fw-semibold">Priority</label>
                <select class="form-select" name="priority">
                  <option value="Low">Low</option>
                  <option value="Medium">Medium</option>
                  <option value="High">High</option>
                </select>
              </div>

              <!-- Status -->
              <div class="mb-4">
                <label class="form-label fw-semibold">Status</label>
                <select class="form-select" name="status">
                  <option value="pending">Pending</option>
                  <option value="in progress">In Progress</option>
                  <option value="completed">Completed</option>
                </select>
              </div>

              <!-- Save Button -->
              <button class="btn btn-primary w-100 save-btn py-2">
                Save Task
              </button>

            </form>

          </div>
        </div>

      </div>
    </div>

  </main>

  <!-- Footer -->
  <footer class="border-top bg-white py-3 mt-auto">
    <div class="container text-center small text-muted">
      &copy; <%= new Date().getFullYear() %> StudyTrack · Built with Node.js & Express
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
