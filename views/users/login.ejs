<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login Â· StudyTrack</title>

  <!-- Bootstrap 5 -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Google Font -->
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
    rel="stylesheet"
  />

  <style>
    body {
      font-family: "Inter", system-ui, sans-serif;
    }

    .navbar {
      background: linear-gradient(135deg, #4f46e5, #6366f1);
    }

    .auth-card {
      border-radius: 18px;
    }

    .form-control {
      border-radius: 12px;
      padding: 10px 14px;
    }

    .form-control:focus {
      border-color: #6366f1;
      box-shadow: 0 0 0 0.2rem rgba(99,102,241,0.25);
    }

    .auth-btn {
      border-radius: 999px;
      font-weight: 600;
    }
  </style>
</head>

<body class="bg-light d-flex flex-column min-vh-100">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/tasks">StudyTrack</a>
    </div>
  </nav>

  <!-- Main -->
  <main class="container flex-grow-1 d-flex align-items-center">
    <div class="row justify-content-center w-100">
      <div class="col-md-6 col-lg-4">

        <!-- Error Message -->
        <% if (errorMsg && errorMsg.length) { %>
          <div class="alert alert-danger alert-dismissible fade show">
            <%= errorMsg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <!-- Login Card -->
        <div class="card auth-card shadow border-0">
          <div class="card-body p-4">

            <h3 class="fw-semibold text-center mb-3">Welcome Back ðŸ‘‹</h3>
            <p class="text-muted text-center small mb-4">
              Sign in to continue to StudyTrack
            </p>

            <form action="/login" method="POST" class="needs-validation" novalidate>

              <!-- Username -->
              <div class="mb-3">
                <label class="form-label fw-semibold">Username</label>
                <input
                  type="text"
                  name="username"
                  class="form-control"
                  placeholder="Enter your username"
                  required
                >
                <div class="invalid-feedback">
                  Please enter username.
                </div>
              </div>

              <!-- Password -->
              <div class="mb-4">
                <label class="form-label fw-semibold">Password</label>
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  placeholder="Enter your password"
                  required
                >
                <div class="invalid-feedback">
                  Please enter password.
                </div>
              </div>

              <!-- Submit -->
              <button type="submit" class="btn btn-primary w-100 auth-btn py-2">
                Sign In
              </button>

            </form>

            <p class="text-center mt-3 small">
              Donâ€™t have an account?
              <a href="/signup" class="fw-semibold text-decoration-none">
                Sign up
              </a>
            </p>

          </div>
        </div>

      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="border-top bg-white py-3 mt-auto">
    <div class="container text-center small text-muted">
      &copy; <%= new Date().getFullYear() %> StudyTrack Â· Built with Node.js & Express
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
